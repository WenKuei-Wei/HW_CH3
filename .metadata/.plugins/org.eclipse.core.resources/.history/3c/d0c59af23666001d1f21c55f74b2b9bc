public class P14 {
	public static void main(String[] args) {
		Cara car1;
		car1 = new Cara();
		
		car1.num = 1234;
		car1.gas = 20.5;		
		car1.showCar();		
		
	}
}

class Cara
{
	//Car類別
	int num;
	double gas;
	
	void show()
	{
		System.out.println("車號是" + num);
		System.out.println("油量是" + gas);
	}
	
	void showCar()
	{
		System.out.println("顯示車子資訊 : ");
		show();
		
	}
}